{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "esnext",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
